.sort{
  height: 40rpx;
  font-size: 28rpx;
  color: gray;
  text-align: right;
}
.td {
  width: 0.4rem;
  height: auto;
  margin-left: 0.3rem;
  vertical-align: middle;
}
.list-pic{height: 7rem !important;}
