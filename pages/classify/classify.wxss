.sort-item:nth-child(even){
  margin-right: 0;
}
.sort-item:nth-child(odd){
  margin-right: 10px;
}
.sort-item{
  width: calc(50% - 5px);
  margin-bottom: 10px;
  border:1px solid #f1f6f7;
  box-sizing: border-box;
  float: left;
}
.original_price{
  text-decoration: line-through;
  color: gray;
  font-size: 28rpx;
